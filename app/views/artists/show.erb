<!DOCTYPE html>
<html>
<head>
	<title><%= @artist.name %></title>
</head>
<body>
	<h1><%= @artist.name %></h1>
	<h2>Songs</h2>
	<% @artist.songs.each do |s| %>
	<p><a href = "/songs/<%=s.slug%>"><%= s.name %></a></p>
	<% end %>
	<h2>Genres</h2>
	<% @artist.genres.each do |g| %>
	<p><a href = "/genres/<%=g.slug%>"><%= g.name %></a></p>
	<% end %>
</body>
</html>